= form_tag(cama_search_path, :method => "get", :class => "form-search margin-top-15 form-horizontal navbar-form.navbar-left") do
  .input-group
    %input.form-control{:name => "q", :placeholder => "#{ct("search", default: 'Search here')}...", :type => "text"}/
    .input-group-btn
      %button.btn.btn-default{:type => "submit"}
        %i.glyphicon.glyphicon-search{:style => "font-size: 14px;"}